@model Guid
@{
    ViewBag.Title = "Edit Status";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<div class="container">
    <h2>Edit Status</h2>


    @using (Html.BeginForm())
    {
        @Html.Hidden("TheId", Model)
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Profile</h4>
            <hr />
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.Label("Enter your new status", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextArea("StatusUpdate", null, 8, 50, null)
                    @Html.ValidationMessage("StatusUpdate", "Enter some text")
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to Profile", "Index")
    </div>
</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }


