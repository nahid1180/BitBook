@model Guid
@{
    ViewBag.Title = "Edit Your Picture";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<div class="container">
    <h2>Edit Image</h2>


    @using (Html.BeginForm("EditImage", "Profile", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.Hidden("TheId", Model)
        @Html.AntiForgeryToken()
        <p>&nbsp;</p>
        <div class="form-group">
            @Html.Label("Upload new picture", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input name="imageFile" type="file" />
                @Html.ValidationMessage("imageFile", "You need to select a photo")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    }
    <p>&nbsp;</p>

</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }


