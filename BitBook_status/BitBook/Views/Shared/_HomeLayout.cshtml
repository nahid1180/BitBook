@model dynamic
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BitBook</title>

    @Styles.Render("~/Content/CSS")
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/fonts/css")

</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top header_color">
        <div class="container-fluid header_color">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span class="profile_header_logo"><a href="~/Home/Index"><img src="~/Images/logo.png" /></a></span>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                    <li class="profile_header_manu"><a href="#"><img src="~/Images/friend_req.png" /></a></li>
                    <li><a href="#"><img src="~/Images/notification.png" /></a></li>
                </ul>
                <form class="navbar-form navbar-left profile_header_search" role="search">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search">
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container-fluid margin-top">
        <div class="row-fluid" style="margin-top: 10px;">
            <div class="prettyprint linenums" id="content">
                @RenderBody()
            </div>

            <!-- end .sidebar2 -->
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>


