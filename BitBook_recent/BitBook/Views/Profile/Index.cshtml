@using Microsoft.AspNet.Identity
@model BitBook.Models.ProfileStatus
@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
    ViewBag.Title = "Your Profile";
    var columns = new List<string> { "UpdatedByFullName", "StatusUpdate", "TimeOfUpdate" };
    var grid = new WebGrid(Model.StatusList, defaultSort: "TimeOfUpdate", columnNames: columns, rowsPerPage: 8);
    grid.SortDirection = SortDirection.Descending;
}
<div class="container">    
    <div class="row">
        <aside class="col-md-4">
            <h3>@Html.DisplayFor(m => m.Profile.FullName) </h3>

            <img src="@Url.Action("GetImage", "Profile", new {id = Model.Profile.Id})" class="profile-pic img-circle" width="140" height="140" />
            <p style="margin-top: 10px">
                Edit your picture.<br/>
                @Html.ActionLink("Edit Image", "EditImage", new { id = Model.Profile.Id })
            </p>
            <p>Want to change password</p>
             @Html.ActionLink("Change Password", "Manage", "Account") 
        </aside>
        <section class="col-md-8">
            <form>
                <div>
                    <h1>Basic Information</h1>
                    <p>Birthday</p>
                    <span></span>
                    <p>Gender</p>
                    <span></span>

                    
                    <!-- Button trigger modal -->
                    
                    <!-- Modal -->
                    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                    <h4 class="modal-title" id="myModalLabel">Basic Information</h4>
                                </div>
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Bithday</label>
                                        <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter your birthday">
                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Gender</label>
                                        <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter your gender">
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-info">Save changes</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#myModal">
                        Edit Info
                    </button>

                    
                    
                    <article class="profile_aiticle">
                        <h1>Contact Information</h1>
                        <p>Contact Number</p>
                        <span></span>
                        <p>Username</p>
                        <span></span>
                        <p>Address</p>
                        <span></span>
                        
                        <!-- Button trigger modal -->
                        <!-- Modal -->
                        <div class="modal fade" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                        <h4 class="modal-title" id="myModalLabel">Contact Information</h4>
                                    </div>
                                    <div class="modal-body">
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Contact Number</label>
                                            <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter your number">
                                        </div>

                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Username</label>
                                            <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter your email">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Address</label>
                                            <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter your address">
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-info">Save changes</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#myModal1">
                            Edit Info
                        </button>
                    </article>
                    
                </div>
            </form>         
        </section>
    </div>

</div>